<article class="post">
    <header>
        <h1>{{post.title}}</h1>
        <div class="post-meta">
            <span>Posted by {{post.author}} on {{formatDate post.date}}</span>
        </div>
    </header>
    <section class="post-content">
        {{{post.content}}}
    </section>
    <footer>
        <nav class="post-navigation">
            {{#if previousPost}}
                <a href="/posts/{{previousPost.id}}" class="prev">Previous Post</a>
            {{/if}}
            {{#if nextPost}}
                <a href="/posts/{{nextPost.id}}" class="next">Next Post</a>
            {{/if}}
        </nav>
    </footer>
</article>